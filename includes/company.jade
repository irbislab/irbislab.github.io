section#contact
  #contact-form
    form(autocomplete='off', method='post', action='', novalidate)
      h5 How can we help?
      label(for='name') Your name
      input.required(name='name', type='text', tabindex='1',
        placeholder='Your name')
      label(for='email') Your email
      input.required(name='email', type='text', tabindex='2',
        placeholder='Your email', spellcheck='false')
      label(for='message') Message
      textarea.required(name='message', tabindex='3',
        placeholder='Message', spellcheck='true')
      input#send(name='saveForm', type='submit', value='Send Message',
        tabindex='4')
  #company-info
    h5 Where are we?
    a.view-map(target='_blank', href='http://maps.google.com/maps?f=q&source=s_q&hl=en&geocode=&q=Olavarr%C3%ADa+2531,+Mar+del+Plata,+Buenos+Aires,+Argentina&aq=&sll=-38.012243,-57.540286&sspn=0.011868,0.022724&vpsrc=0&doflg=ptk&ie=UTF8&hq=&hnear=Olavarr%C3%ADa+2531,+Mar+del+Plata,+Buenos+Aires,+Argentina&t=m&z=16')
      img.map(src='http://maps.googleapis.com/maps/api/staticmap?center=-38.012243,-57.540286&zoom=17&size=270x180&sensor=false',
        alt='Irbis Lab Map')
      i.sprite.marker
    div
      p
        strong Address
        | Olavarria 2531
        | <br>Mar del Plata, Buenos Aires
    p
      strong Phone
      a(href='tel:+54-9223-5938838') (+54) 9223 5938838
    p
      strong Mail
      a(href='mailto:hello@irbislab.com') hello@irbislab.com
